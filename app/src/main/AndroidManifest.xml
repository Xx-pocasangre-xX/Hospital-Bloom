<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_bloom"
        android:label="Bloom Salud"
        android:roundIcon="@drawable/logo_bloom"
        android:supportsRtl="true"
        android:theme="@style/Theme.HospitalBloom"
        tools:targetApi="31">
        <activity
            android:name=".activity_nuevos_medicamentos"
            android:exported="false" />
        <activity
            android:name=".activity_registro_pacientes"
            android:exported="false" />
        <activity
            android:name=".activity_listado_pacientes"
            android:exported="false" />
        <activity
            android:name=".activity_ingreso"
            android:exported="false" />
        <activity
            android:name=".activity_pantalla_carga"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>